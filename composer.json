{
    "name": "flipsite/flipsite",
    "license": "Apache-2.0",
    "description": "Static website compiler that scores 100/100 on all Lighthouse tests",
    "type": "library",
    "authors": [
        {
            "name": "Henrik Karlstrom",
            "email": "henrik.karlstrom@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Flipsite\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Flipsite\\Tests\\": "tests"
        }
    },
    "require": {
        "php": "^8.0",
        "ext-mbstring": "*",
        "adamlc/address-format": "^1.3",
        "adbario/php-dot-notation": "^2.2",
        "ckr/arraymerger": "^2.0",
        "erusev/parsedown": "^1.7",
        "giggsey/libphonenumber-for-php": "^8.12",
        "intervention/image": "^2.5",
        "jakeasmith/http_build_url": "^1.0",
        "league/container": "^3.3",
        "league/csv": "^9.6",
        "mossadal/math-parser": "^1.3",
        "psr/log": "^1.1",
        "scrivo/highlight.php": "v9.18.1.7",
        "slim/psr7": "^1.3",
        "slim/slim": "^4.7",
        "ssnepenthe/color-utils": "^0.4.2",
        "symfony/console": "^5.2",
        "symfony/filesystem": "^5.0",
        "symfony/web-server-bundle": "^4.4",
        "symfony/yaml": "^v5.0",
        "twig/twig": "^3.3",
        "ua-parser/uap-php": "^3.9"
    },
    "require-dev": {
        "phpstan/phpstan": "^0.12.25",
        "phpunit/phpunit": "^9"
    },
    "scripts": {
        "analyse": "./vendor/bin/phpstan analyse -l 4 -c phpstan.neon src",
        "test": "./vendor/bin/phpunit"
    },
    "config": {
        "sort-packages": true
    },
    "bin": [
        "bin/flipsite"
    ]
}
