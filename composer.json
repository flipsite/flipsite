{
    "name": "flipsite/flipsite",
    "license": "Apache-2.0",
    "description": "Static website compiler that scores 100/100 on all Lighthouse tests",
    "type": "library",
    "authors": [
        {
            "name": "Henrik Karlstrom",
            "email": "henrik.karlstrom@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Flipsite\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Flipsite\\Tests\\": "tests"
        }
    },
    "require": {
        "php": "^8.0",
        "ext-mbstring": "*",
        "adbario/php-dot-notation": "3.1.1",
        "ckr/arraymerger": "3.0.0",
        "erusev/parsedown": "^1.7",
        "giggsey/libphonenumber-for-php": "^8.12",
        "intervention/image": "2.7.2",
        "jakeasmith/http_build_url": "^1.0",
        "league/container": "^3.3",
        "league/csv": "^9.6",
        "mossadal/math-parser": "^1.3",
        "slim/psr7": "1.5",
        "slim/slim": "4.10",
        "ssnepenthe/color-utils": "0.4.2",
        "symfony/console": "6.0.8",
        "symfony/filesystem": "6.0.7",
        "symfony/yaml": "6.0.3",
        "twig/twig": "3.4.1"
    },
    "require-dev": {
        "phpstan/phpstan": "^0.12.25",
        "phpunit/phpunit": "^9"
    },
    "scripts": {
        "analyse": "./vendor/bin/phpstan analyse -l 4 -c phpstan.neon src",
        "test": "./vendor/bin/phpunit"
    },
    "config": {
        "sort-packages": true
    },
    "bin": [
        "bin/flipsite"
    ]
}
